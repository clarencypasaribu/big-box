datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")      
  directUrl = env("DIRECT_DATABASE_URL") 
  schemas   = ["public"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model Profile {
  id        String   @id @db.Uuid
  email     String   @map("email")
  fullName  String?  @map("full_name")
  firstName String?  @map("first_name")
  lastName  String?  @map("last_name")
  phone     String?  @map("phone")
  position  String?  @map("position")
  bio       String?  @map("bio")
  role      String?  @map("role")
  isActive  Boolean  @default(true) @map("is_active")
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)

  @@map("profiles")
  @@schema("public")
}

model Project {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  code        String?
  location    String?
  status      String   @default("In Progress")
  progress    Int      @default(0)
  lead        String?
  iconBg      String?  @map("icon_bg")
  description String?
  ownerId     String?  @map("owner_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)
  startDate   DateTime? @map("start_date") @db.Date
  endDate     DateTime? @map("end_date") @db.Date
  teamMembers String[]  @map("team_members")
  tasks       Task[]
  members     ProjectMember[]

  @@map("projects")
  @@schema("public")
}

model ProjectMember {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId String  @map("project_id") @db.Uuid
  memberId  String  @map("member_id") @db.Uuid
  role      String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  project   Project @relation(fields: [projectId], references: [id])

  @@unique([projectId, memberId], map: "project_members_project_id_member_id_key")
  @@map("project_members")
  @@schema("public")
}

model Task {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  seedKey     String?  @unique @map("seed_key")
  title       String
  description String?
  status      String
  priority    String?
  stage       String?
  dueDate     String?  @map("due_date")
  projectId   String   @map("project_id") @db.Uuid
  project     Project  @relation(fields: [projectId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)

  @@map("tasks")
  @@schema("public")
}

model Blocker {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  taskId       String   @map("task_id") @db.Uuid
  taskTitle    String?  @map("task_title")
  projectId    String   @map("project_id") @db.Uuid
  projectName  String?  @map("project_name")
  title        String?
  product      String?
  reason       String?
  notes        String?
  reporterId   String   @map("reporter_id") @db.Uuid
  reporterName String?  @map("reporter_name")
  pmId         String   @map("pm_id") @db.Uuid
  status       String   @default("Open")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)

  @@map("blockers")
  @@schema("public")
}

model ProjectStageApproval {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  projectId   String    @map("project_id") @db.Uuid
  stageId     String    @map("stage_id")
  status      String    @default("Pending")
  requestedBy String?   @map("requested_by") @db.Uuid
  approvedBy  String?   @map("approved_by") @db.Uuid
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  approvedAt  DateTime? @map("approved_at") @db.Timestamptz(6)

  @@unique([projectId, stageId], map: "project_stage_approvals_project_id_stage_id_key")
  @@map("project_stage_approvals")
  @@schema("public")
}

model TaskDeliverable {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  taskId      String   @map("task_id") @db.Uuid
  notes       String?
  dataIngest  String?  @map("data_ingest")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("task_deliverables")
  @@schema("public")
}

model File {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  size        Int
  type        String
  data        String   
  entityType  String   @map("entity_type")
  entityId    String   @map("entity_id") @db.Uuid
  uploaderId  String?  @map("uploader_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("files")
  @@schema("public")
}
